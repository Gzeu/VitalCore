<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Micro-UX: Hover Elevation & Glow -->
    <Style x:Key="InteractiveCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
        <Setter Property="PointerCursor" Value="Hand"/>
        <Style.Transitions>
            <TransitionCollection>
                <ReorderThemeTransition />
            </TransitionCollection>
        </Style.Transitions>
        <!-- Custom visual states for hover can be added in a ControlTemplate -->
    </Style>

    <!-- Micro-UX: Status Indicators -->
    <Style x:Key="StatusDotStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <!-- Micro-UX: Compact Tooltips -->
    <Style x:Key="MetricTooltipStyle" TargetType="ToolTip">
        <Setter Property="Background" Value="{ThemeResource SystemControlAcrylicElementBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Animated Value Transition -->
    <!-- Used for text that updates frequently to prevent 'jumping' -->
    <Style x:Key="SmoothMetricTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MetricValueStyle}">
        <Setter Property="CharacterSpacing" Value="10"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

</ResourceDictionary>