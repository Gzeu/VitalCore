&lt;Page x:Class="VitalCore.UI.Views.Pages.OverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
      xmlns:viewmodels="using:VitalCore.UI.ViewModels"&gt;
    &lt;Page.DataContext&gt;
        &lt;viewmodels:OverviewViewModel /&gt;
    &lt;/Page.DataContext&gt;
    &lt;Grid&gt;
        &lt;StackPanel Spacing="20" Margin="20"&gt;
            &lt;TextBlock Text="System Overview" FontSize="24" FontWeight="Bold" /&gt;
            &lt;lvc:CartesianChart Series="{Binding CpuSeries}" 
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}" 
                                Background="Transparent" /&gt;
            &lt;ProgressBar Value="{Binding RamLoad}" Maximum="100" Width="300" /&gt;
        &lt;/StackPanel&gt;
    &lt;/Grid&gt;
&lt;/Page&gt;