<Page
    x:Class="VitalCore.UI.Views.Pages.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:viewmodels="using:VitalCore.UI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Spacing="8">
                <TextBlock Text="System Dashboard" Style="{StaticResource TitleLargeTextBlockStyle}" FontWeight="Bold" Foreground="{StaticResource AccentColorNeon}"/>
                <TextBlock Text="Real-time hardware performance metrics" Style="{StaticResource BodyTextBlockStyle}" Opacity="0.6"/>
            </StackPanel>
            
            <!-- Global Stress Test Control -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                <Button Command="{Binding ToggleStressCommand}" 
                        Style="{StaticResource AccentButtonStyle}"
                        Padding="16,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="{Binding StressIcon}" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
                        <TextBlock Text="{Binding StressButtonText}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid ColumnSpacing="20" RowSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- CPU Chart Card -->
                <Border Grid.Column="0" Grid.Row="0" 
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="12" Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
                            <FontIcon Glyph="&#xE950;" FontFamily="{StaticResource SymbolThemeFontFamily}" Foreground="Cyan"/>
                            <TextBlock Text="Processor Load (%)" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                        <lvc:CartesianChart Grid.Row="1" 
                                            Series="{Binding CpuSeries}"
                                            XAxes="{Binding XAxes}"
                                            YAxes="{Binding YAxes}"
                                            TooltipPosition="Hidden"/>
                    </Grid>
                </Border>

                <!-- Stats Side Card -->
                <StackPanel Grid.Column="1" Grid.Row="0" Spacing="20">
                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="12" Padding="20">
                        <StackPanel Spacing="4">
                            <TextBlock Text="CPU LOAD" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.6"/>
                            <TextBlock Text="{Binding CpuText}" FontSize="36" FontWeight="Bold" Foreground="Cyan"/>
                            <ProgressBar Value="{Binding CpuLoad}" Maximum="100" Margin="0,12,0,0" Foreground="Cyan"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="12" Padding="20">
                        <StackPanel Spacing="4">
                            <TextBlock Text="RAM USAGE" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.6"/>
                            <TextBlock Text="{Binding RamLoadText}" FontSize="36" FontWeight="Bold" Foreground="MediumPurple"/>
                            <ProgressBar Value="{Binding RamLoad}" Maximum="100" Margin="0,12,0,0" Foreground="MediumPurple"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- GPU Status Card -->
                <Border Grid.Row="1" Grid.ColumnSpan="2" 
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="12" Padding="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <FontIcon Glyph="&#xE7F4;" FontSize="32" FontFamily="{StaticResource SymbolThemeFontFamily}" Foreground="OrangeRed"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="GPU MONITORING" FontWeight="Bold"/>
                                <TextBlock Text="{Binding GpuText}" FontSize="24" Foreground="OrangeRed"/>
                            </StackPanel>
                        </StackPanel>
                        <lvc:CartesianChart Grid.Column="1" Height="80" Margin="40,0"
                                            Series="{Binding GpuSeries}"
                                            XAxes="{Binding XAxes}"
                                            YAxes="{Binding YAxes}"
                                            TooltipPosition="Hidden"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>